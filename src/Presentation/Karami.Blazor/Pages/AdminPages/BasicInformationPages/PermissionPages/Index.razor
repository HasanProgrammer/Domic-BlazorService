@page "/{language}/basic-information/permission"

@layout MainLayout

@inherits ErrorBoundaryBase

<MudTable @*Items="@Elements.Take(4)"*@ Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>نام</MudTh>
        <MudTh>نقش</MudTh>
        <MudTh>حذف شده</MudTh>
        <MudTh>Position</MudTh>
        <MudTh>Molar mass</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Sign</MudTd>
        <MudTd DataLabel="Role">@context.Sign</MudTd>
        <MudTd DataLabel="IsDeleted">@context.Sign</MudTd>
    </RowTemplate>
</MudTable>

@code {
    
    private bool _loading;
    
    [Parameter]
    public string Language { get; set; }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

    protected override Task OnErrorAsync(Exception exception)
    {
        return Task.CompletedTask;
    }

}